    <div class="media-content"> 
      <%= form_with model: [article, comment], local: true do |form| %>
        <div class="field">
          <p class="control">
            <%= form.text_field :commenter, class: 'input', placeholder: 'Commenter' %>
          </p>
        </div>
        <div class="field">
          <p class="control">
              <%= form.text_area :body, class: 'textarea', placeholder: 'Add a comment...' %>
          </p>
        </div>
        <nav class="level">
          <div class="level-left">
          </div>
          <div class="level-right">
            <div class="level-item">
              <%= form.submit submit_name, class: 'button is-info' %>
            </div>
            <% if local_assigns[:edit] %>
              <div class="level-item">
                <%= link_to 'Cancel', article_path(article), class: 'button is-link is-light' %>
              </div>
            <% end %>
          </div>
        </nav>
      <% end %>
    </div>
  </article>
</div>
